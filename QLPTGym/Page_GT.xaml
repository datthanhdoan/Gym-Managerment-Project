<Page x:Class="QLPTGym.Page_GT"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QLPTGym"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_NV">

    <Grid>

                <Grid Background="White" Margin="1,0,-1,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="160"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <WrapPanel Grid.Row="0"/>
                    <WrapPanel Grid.Row="2">
                    </WrapPanel>
                    <Label Content="Thông tin gói tập" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="774" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" FontWeight="Bold" Margin="117,-57,0,0"/>
                    <TextBox HorizontalAlignment="Left" Margin="111,2,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="106" Height="23" x:Name="txtTenGT"/>
                    <Label Content="Tên gói tập" HorizontalAlignment="Left" Margin="23,39,0,0" VerticalAlignment="Top" Width="106" VerticalContentAlignment="Center" Grid.RowSpan="2"/>
                    <TextBox HorizontalAlignment="Left" Margin="311,2,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="106" Height="23" x:Name="txtThoiGian"/>
                    <Label Content="Thời gian" HorizontalAlignment="Left" Margin="236,1,0,0" Grid.Row="1" VerticalAlignment="Top" Width="106" VerticalContentAlignment="Center"/>
                    <TextBox HorizontalAlignment="Left" Margin="504,2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="106" Height="23" x:Name="txtGia" Grid.Row="1"/>
                    <Label Content="Giá tiền" HorizontalAlignment="Left" Margin="451,37,0,0" VerticalAlignment="Top" Width="106" VerticalContentAlignment="Center" Grid.RowSpan="2"/>
                    <TextBox HorizontalAlignment="Left" Margin="111,55,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="106" Height="23" x:Name="txtGiamGia"/>
                    <Label Content="Sale (%)" HorizontalAlignment="Left" Margin="25,52,0,0" VerticalAlignment="Top" Width="106" VerticalContentAlignment="Center" Grid.Row="1"/>
                    <Label Content="Ngày bắt đầu" HorizontalAlignment="Left" Margin="222,54,0,0" VerticalAlignment="Top" Width="106" VerticalContentAlignment="Center" Grid.Row="1"/>
                    <Label Content="Ngày kết thúc" HorizontalAlignment="Left" Margin="416,52,0,0" VerticalAlignment="Top" Width="106" VerticalContentAlignment="Center" Grid.Row="1"/>
                    <DatePicker HorizontalAlignment="Left" Margin="312,54,0,0" Grid.Row="1" VerticalAlignment="Top" Width="104" x:Name="datepick_NgayBD"/>
                    <DatePicker HorizontalAlignment="Left" Margin="506,56,0,0" Grid.Row="1" VerticalAlignment="Top" Width="104" x:Name="datepick_NgayKT"/>

                    <!-- Button -->
                    <Button Content="Thêm" HorizontalAlignment="Left" Margin="25,119,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="72" Click="Them"/>
                    <Button Content="Sửa" HorizontalAlignment="Left" Margin="129,119,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="70" Click="Sua"/>
                    <Button Content="Xóa" HorizontalAlignment="Left" Margin="222,119,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="71" Click="Xoa"/>
                    <Button Content="Làm mới" HorizontalAlignment="Left" Margin="451,117,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="70" Click="LamMoi"/>
                    <Button Content="Tìm kiếm" HorizontalAlignment="Left" Margin="540,117,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="70" Click="TimKiem"/>


                    <!-- Data  -->
                    <DataGrid Grid.Row="2" x:Name="myListView"  Height="200" SelectionChanged="DataGrid_SelectionChanged">
                    </DataGrid>
                </Grid>

    </Grid>
</Page>